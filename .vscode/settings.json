{
	"editor.insertSpaces": false,
	"typescript.tsc.autoDetect": "off",
	"typescript.preferences.quoteStyle": "single",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"scripts": true,
		"node_modules": true,
		"client/node_modules": true,
		"server/node_modules": true,
		"server/package-lock.json": true,
		"server/package.json": true,
		"server/tsconfig.json": true,
		"server/tsconfig.tsbuildinfo": true,
		"client/tsconfig.tsbuildinfo": true,
		"client/tsconfig.json": true,
		"client/package.json": true,
		"client/package-lock.json": true,
		"client/testFixture": true,
		"client/src/test": true,
		".gitattributes": true,
		".gitignore": true,
		".vscodeignore": true,
		"CHANGELOG.md": true,
		"package-lock.json": true,
		"language-configuration.json": true,
		"eslint.config.mjs": true,
		".vscode-test": true,
		".vscode": true,
		"vsc-extension-quickstart.md": true,
		"tsconfig.json": true
	},
	"hide-files.files": [
		"scripts",
		"node_modules",
		"client/node_modules",
		"server/node_modules",
		"server/package-lock.json",
		"server/package.json",
		"server/tsconfig.json",
		"server/tsconfig.tsbuildinfo",
		"client/tsconfig.tsbuildinfo",
		"client/tsconfig.json",
		"client/package.json",
		"client/package-lock.json",
		"client/testFixture",
		"client/src/test",
		".gitattributes",
		".gitignore",
		".vscodeignore",
		"CHANGELOG.md",
		"package-lock.json",
		"language-configuration.json",
		"eslint.config.mjs",
		".vscode-test",
		".vscode",
		"vsc-extension-quickstart.md",
		"tsconfig.json"
	]
}